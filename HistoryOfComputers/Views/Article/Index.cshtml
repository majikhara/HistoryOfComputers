@model IEnumerable<HistoryOfComputers.Models.Article>

@{
    ViewData["Title"] = "Articles";
}

<div class="container">
    <header class="page-header">
        <h1 id="timeline-title">The Ages of Computing</h1>
    </header>



    <ul class="timeline">
      
         @{ var count = 0;}    
        @*<li>
            <div class="tldate">@Model.FirstOrDefault().TimePeriod.PeriodName</div>
        </li>*@
        
        @{string last = "";}
        @{string current = "";}

    @foreach (var item in Model)
    {
        current = @item.TimePeriod.PeriodName;

        if (current != last)
        {
            <li>
                <div class="tldate">@current</div>
            </li>
        }
        if (count % 2 == 0)
        {
            <li>
                <div class="tl-circ">@Html.DisplayFor(modelItem => item.Year)</div>
                
                <div class="timeline-panel">

                    <div class="tl-heading">
                        <h4>@Html.DisplayFor(model => item.Title)</h4>
                        <a asp-action="Details" asp-route-id="@item.ArticleID">
                            <img class="img-responsive center-block" src="~/images/@Html.DisplayFor(modelItem => item.Image)" />
                        </a>

                    </div>

                </div>
                
            </li>
        }
        else
        {

            <li class="timeline-inverted">
                <div class="tl-circ">@Html.DisplayFor(modelItem => item.Year)</div>
                <div class="timeline-panel">
                    <div class="tl-heading">
                        <h4>@Html.DisplayFor(model => item.Title)</h4>
                        <a asp-action="Details" asp-route-id="@item.ArticleID">
                            <img class="img-responsive center-block" src="~/images/@Html.DisplayFor(modelItem => item.Image)" />
                            </a>

</div>

                </div>
            </li>
        }
        count++;
        last = current;
    }

        
</ul>
